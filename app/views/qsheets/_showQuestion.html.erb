<% @counter = 0 %>
<% @questionIDArray = Question.where(qsheet_id: @qsheet.id).pluck(:id) %>
<table class="table table-striped">
    <thead class="thead-inverse">
        <tr>
            <th colspan="4">
                <% @corrDivision = Division.find(@qsheet.division_id) %>
                  <%= @corrContest = Contest.find(@corrDivision.contest_id).contest_name %> Questions
                  <br>
                  Division: <%= @corrDivision.division_name %>, Round 
                  <%= @corrDivision.round %>
            </th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th>Number</th>
            <th>Integer (I) or String (S)?</th>
            <th>Question</th>
            <th>Delete</th>
        </tr>
    </thead>
    
    <tbody>
    <% @questionIDArray.each do |id| %>
    <% @currQuestion = Question.find(id) %>
        <tr>
            <td><%= @counter += 1 %></td>
            <td><%= @currQuestion.dataType%></td>
            <td><%= @currQuestion.content %></td>
            <td><%= link_to 'Delete', qsheet_path(:id => id), :method => :delete %></td>
        </tr>
    <% end %> 
    </tbody>
</table>


 
