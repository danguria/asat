<script>
    document.getElementById("judge-nav").className = "active";
</script>

<%= link_to(participate_index_path, :html => {:class => 'btn btn-default btn-med'}) do %>
<span class='glyphicon glyphicon-arrow-left'></span>
 Back to My Auctioneers
<% end %>

  <h2> Contestants of <%= @contest.contest + " " + @contest.year.to_s%> Contest </h2>
  <h3> Division: <%= @contest.division %></h3>
  <h3> Round: <%= @contest.round %></h3>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="col-xs-6 col-sm-4">Name</th>
        <th class="col-xs-6 col-sm-4">Status</th>
      </tr>
    </thead>
    
    <tbody>
      <% @contestants.each do |c| %>
          <tr>
            <td><%= c[:user] %></td>
            <td> <%= link_to 'Assess this contestant', edit_participate_path(:id => c[:id]) %> </td>
          </tr>
      <% end %>
    </tbody>
  </table>
